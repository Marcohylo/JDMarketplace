<% content_for :header do %>
<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Browse the latest JDMS on JDMarket
      </h1>
    </div>
  </div>
</section>
<% end %>

<% if false %>
<div class="listing-index-grid pt4">
    <div class="listing border-light">
      <div class="listing-thumb">
      <%= link_to image_tag(listing.image_url(:thumb)), listing %>
    

      <% if listing.condition? %>
        <div class="condition">
          <span class="tag is-dark"><%= listing.condition %></span>
        </div>
      </div>
    <% end %>

    <div class="pa3">

      <h3 class="fw7 f4 title"><%= link_to listing.title, listing %></h3>

      <p class="has-text-gray fg pt1">Sold by <%= listing.user.name %></p>

      <p class="f3 fw6 has-text-right pt2 price"><%= number_to_currency(listing.price) %></p>

      <% if listing_author(listing) %>
         <%= link_to 'Edit', edit_listing_path(listing), class: "button is-small" %>
         <%= link_to 'Delete', listing, method: :delete, data: { confirm: "Are you sure ?" }, class: "button is-small" %>
      <% end %>

    </div>
  </div>
  <% end %>
</div>